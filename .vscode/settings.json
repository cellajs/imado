{
  "remote.localPortHost": "localhost",
  "files.exclude": {
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/dist/**": true,
    "/backend/drizzle/meta/**": true,
    "/backend/drizzle/*.sql": true
  },
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/dist/**": true,
    "**/build/**": true,
    "**/.vscode/**": true,
    "**/.pnpm/**": true
  },
  "typescript.preferences.autoImportFileExcludePatterns": ["@radix-ui/**", "@react-email/**", "console"]
}
